FROM jlesage/jdownloader-2

ENV KEEP_APP_RUNNING=0

ARG MYJDOWNLOADER_EMAIL
ENV MYJDOWNLOADER_EMAIL=$MYJDOWNLOADER_EMAIL

ARG MYJDOWNLOADER_PASSWORD
ENV MYJDOWNLOADER_PASSWORD=$MYJDOWNLOADER_PASSWORD

ARG MYJDOWNLOADER_DEVICE_NAME
ENV MYJDOWNLOADER_DEVICE_NAME=$MYJDOWNLOADER_DEVICE_NAME

ENV JDOWNLOADER_HEADLESS=0

RUN mkdir /media/jdownloader -p

#symlink /data/downloads to /downloads
RUN ln -s /media/jdownloader /output